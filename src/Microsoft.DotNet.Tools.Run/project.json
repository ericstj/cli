{
    "name": "dotnet-run",
    "version": "1.0.0-*",
    "compilationOptions": {
        "emitEntryPoint": true
    },
    "dependencies": {
        "NETStandard.Library": "1.0.0-rc2-23704",
        "Microsoft.NETCore.Platforms": "1.0.1-rc2-23704",
        
        "Microsoft.Net.Compilers.netcore": "1.2.0-beta1-20160108-01",
        "System.CommandLine" : "0.1.0-d111815-3",

        "Microsoft.DotNet.ProjectModel": "1.0.0-*",
        "Microsoft.DotNet.Cli.Utils": "1.0.0-*"
    },
    "frameworks": {
        "dnxcore50": { }
    },
    "scripts": {
        "postcompile": [
            "../../scripts/build/place-binary \"%compile:OutputDir%/%project:Name%.dll\"",
            "../../scripts/build/place-binary \"%compile:OutputDir%/%project:Name%.pdb\""
        ]
    }
}
